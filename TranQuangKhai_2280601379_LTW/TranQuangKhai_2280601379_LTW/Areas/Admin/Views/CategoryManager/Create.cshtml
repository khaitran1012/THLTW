@model TranQuangKhai_2280601379_LTW.Models.Category

@{
    ViewData["Title"] = "Thêm danh mục";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">➕ Thêm danh mục mới</h4>
        </div>
        <div class="card-body">
            <form asp-action="Add">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold">Tên danh mục</label>
                    <input asp-for="Name" class="form-control" placeholder="Nhập tên danh mục..." />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <a asp-action="Index" class="btn btn-secondary">
                        🔙 Quay lại
                    </a>
                    <button type="submit" class="btn btn-success">
                        ✅ Lưu danh mục
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
