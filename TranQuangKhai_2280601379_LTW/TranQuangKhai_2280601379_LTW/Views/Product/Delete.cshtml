@model TranQuangKhai_2280601379_LTW.Models.Product

@{
    ViewData["Title"] = "Xóa sản phẩm";
}

<h2 class="mb-4 text-danger fw-bold">Xóa sản phẩm</h2>

<div class="card shadow-sm p-4">
    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />

        <p class="fs-5 mb-3">
            Bạn có chắc chắn muốn xóa sản phẩm
            <strong class="text-danger">"@Model.Name"</strong>?
        </p>

        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
                <div class="mb-3">
                    <label class="form-label fw-bold">Hình ảnh:</label><br />
                    <img src="@Model.ImageUrl" alt="Product Image" class="img-thumbnail" style="max-width: 200px;" />
                </div>
        }

        <div class="d-flex gap-2">
            <a asp-action="Index" class="btn btn-secondary">Hủy</a>
            <button type="submit" class="btn btn-danger fw-bold">Xác nhận xóa</button>
        </div>
    </form>
</div>
