@model TranQuangKhai_2280601379_LTW.Models.Product
@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="row g-0">
                    <div class="col-md-5 d-flex align-items-center">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded-start w-100" />
                        }
                        else
                        {
                            <img src="https://via.placeholder.com/300x300?text=No+Image" alt="No Image" class="img-fluid rounded-start w-100" />
                        }
                    </div>
                    <div class="col-md-7">
                        <div class="card-body">
                            <h2 class="card-title text-danger fw-bold">@Model.Name</h2>
                            <h4 class="card-subtitle mb-2 text-muted">Giá: @String.Format("{0:N0} ₫", Model.Price)</h4>
                            <p class="card-text mt-3">@Model.Description</p>

                            @if (Model.Category != null)
                            {
                                <p><strong>Danh mục:</strong> @Model.Category.Name</p>
                            }

                            <a asp-action="Index" class="btn btn-outline-secondary mt-3">⬅ Quay lại danh sách</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
