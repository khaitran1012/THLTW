@model IEnumerable<TranQuangKhai_2280601379_LTW.Models.Product>
@using System.Globalization
@{
    ViewData["Title"] = "Danh sách sản phẩm";
}

<h2 class="text-center my-4 text-primary">📦 Danh sách sản phẩm</h2>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var product in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm border-0 rounded-4">
                <img src="@product.ImageUrl"
                     alt="@product.Name"
                     class="card-img-top rounded-top-4"
                     style="height: 250px; object-fit: cover; box-shadow: 0 2px 6px rgba(0,0,0,0.1);" />

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title fw-semibold text-dark mb-2" style="min-height: 48px;">@product.Name</h5>

                    <p class="text-muted small mb-1" style="height: 40px; overflow: hidden; text-overflow: ellipsis;">
                        @product.Description
                    </p>

                    <p class="mb-1">
                        <span class="badge bg-secondary">
                            @(product.Category?.Name ?? "Không có")
                        </span>
                    </p>

                    <p class="text-danger fw-bold fs-5 mb-3">
                        @product.Price.ToString("N0") đ
                    </p>

                    <form asp-controller="ShoppingCart" asp-action="AddToCart" method="post" class="mt-auto">
                        <input type="hidden" name="productId" value="@product.Id" />

                        <div class="input-group mb-2">
                            <input type="number" name="quantity" value="1" min="1" class="form-control" />
                            <button type="submit" class="btn btn-info">🛒 Thêm vào giỏ</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
</div>
