@model TranQuangKhai_2280601379_LTW.Models.Order

@{
    ViewData["Title"] = "Thanh toán";
}

<h2 class="my-4 text-center text-primary">🧾 Thông tin thanh toán</h2>

<div class="card shadow-sm p-4 mx-auto" style="max-width: 700px;">
    <form asp-action="Checkout" method="post">

        <div class="mb-3">
            <label asp-for="ShippingAddress" class="form-label fw-bold">
                🏠 Địa chỉ giao hàng
            </label>
            <input asp-for="ShippingAddress" class="form-control" placeholder="Nhập địa chỉ cụ thể: số nhà, phường/xã, quận/huyện, tỉnh/thành..." />
            <span asp-validation-for="ShippingAddress" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Notes" class="form-label fw-bold">
                📝 Ghi chú (không bắt buộc)
            </label>
            <textarea asp-for="Notes" class="form-control" rows="4" placeholder="Ghi chú thêm cho người giao hàng..."></textarea>
            <span asp-validation-for="Notes" class="text-danger small"></span>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn btn-outline-secondary">
                ← Quay lại giỏ hàng
            </a>
            <button type="submit" class="btn btn-success fw-bold">
                ✅ Xác nhận đặt hàng
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
